<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="tk.codecube.base.IBaseDao">

  <select id="get" parameterType="String" resultType="tk.codecube.oa.TestModel">
    SELECT * FROM USER WHERE ID = #{id}
  </select>
  
  <select id="findAll" resultType="tk.codecube.oa.TestModel">
    SELECT * FROM USER
  </select>
  
  <insert id="save" parameterType="tk.codecube.oa.TestModel" keyColumn="id">
    INSERT INTO USER (id,userName,passWord) VALUES (#{id},#{userName},#{passWord})
  </insert>
  
  <delete id="deleteById" parameterType="String">
    DELETE FROM USER 
	<where>
		ID = #{id}
	</where>
  </delete>
  
  <update id="update" parameterType="tk.codecube.oa.TestModel">
  	UPDATE USER 
  	<set>
  		<if test="userName != null">userName = #{userName},</if>
	  	<if test="passWord != null">passWord = #{passWord}</if>
  	</set> 
  	WHERE ID = #{id}
  </update>
</mapper>